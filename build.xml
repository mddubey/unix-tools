<project name = "unix-tools">  <!--default = "createZip"-->
    <target name="init">
        <mkdir dir="build/classes/test"/>
        <mkdir dir="build/classes/src"/>
    </target>
    <target name = "clean">
        <delete dir = "build"/>
    </target>

    <target name = "compile" depends = "init">
        <javac srcdir = "src" destdir = "build/classes/src" includeAntRuntime = "false"/>
    </target>

    <path id="classpath">
        <fileset dir="dependencies/test" includes="*.jar"/>
        <fileset dir="build/classes/src" includes="*.class"/>
    </path>

    <target name = "compileTest" depends = "compile">
        <javac srcdir = "test" destdir= "build/classes/test"
               classpath="dependencies/test/junit-4.10.jar;build/classes/src" includeAntRuntime = "false"/>
    </target>

    <target name="runTest" depends="compileTest">
        <java classname="org.junit.runner.JUnitCore"
              classpath="dependencies/test/junit-4.10.jar;build/classes/src/;
              build/classes/test/">
            <arg value="mritunjd.unixtools.FieldCutterTest"/>
            <arg value="mritunjd.unixtools.HeadTest"/>
            <arg value="mritunjd.unixtools.SpaceReducerTest"/>
            <arg value="mritunjd.unixtools.TailTest"/>
            <arg value="mritunjd.unixtools.TextSorterTest"/>
            <arg value="mritunjd.unixtools.UniqTest"/>
            <arg value= "mritunjd.unixtools.WCTest"/>
            <arg value="mritunjd.unixtools.cli.CutInputOptionsTest"/>
            <arg value="mritunjd.unixtools.cli.InputOptionsTest"/>
            <arg value="mritunjd.unixtools.helper.MyArrayTest"/>
        </java>
    </target>


</project>